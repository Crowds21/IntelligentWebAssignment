<div class="modal" id="user-setting-dialog" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
     aria-hidden="true" style="display: none">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="username-modal-title">Set Username</h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="username-input">Username:</label>
                    <input type="text" class="form-control" id="user-setting-input">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="user-setting-cancel" data-dismiss="modal">Cancel
                </button>
                <button type="button" class="btn btn-primary" id="user-setting-submit">Submit</button>
            </div>
        </div>
    </div>
</div>